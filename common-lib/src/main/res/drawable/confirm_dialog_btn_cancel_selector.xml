<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/confirm_dialog_btn_cancel_bg_pressed" />
            <stroke android:width="0.5dp" android:color="@color/color_e0" />
            <corners android:radius="2.0dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/confirm_dialog_btn_cancel_bg_normal" />
            <stroke android:width="0.5dp" android:color="@color/color_e0" />
            <corners android:radius="2.0dp" />
        </shape>
    </item>

</selector>