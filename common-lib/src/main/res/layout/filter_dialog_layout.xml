<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_solid_round_corner_2dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_c_1"
    android:paddingTop="@dimen/space_c_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_a_3"
        android:paddingRight="@dimen/space_a_3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/morning_pager_label_filter"
            android:textColor="@color/color_1"
            android:textSize="@dimen/text_size_4" />

        <ImageView
            android:id="@+id/filter_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:padding="@dimen/space_b_3"
            android:src="@drawable/close_selector" />

    </RelativeLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/filter_flow_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_c_2"
        android:layout_marginTop="@dimen/space_c_2"
        android:paddingLeft="@dimen/space_c_2"
        android:paddingRight="@dimen/space_c_2"
        app:auto_select_effect="true"
        app:max_select="1" />

</LinearLayout>