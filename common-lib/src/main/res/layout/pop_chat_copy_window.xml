<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200dp"
        android:layout_height="@dimen/space_d_5"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/message_popup"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/pop_chat_bg_selector"
            android:gravity="center"
            android:paddingEnd="@dimen/space_b_4"
            android:paddingStart="@dimen/space_b_4"
            android:text="@string/chat_copy"
            android:textColor="@color/color_f" />

        <View
            android:id="@+id/view"
            android:layout_width="1px"
            android:layout_height="@dimen/space_c_2"
            android:layout_marginBottom="@dimen/space_b_2"
            android:layout_marginEnd="@dimen/space_b_1"
            android:layout_marginStart="@dimen/space_b_1"
            android:layout_marginTop="@dimen/space_b_2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/pop_chat_bg_selector"
            android:gravity="center"
            android:paddingEnd="@dimen/space_b_4"
            android:paddingStart="@dimen/space_b_4"
            android:text="@string/chat_share"
            android:textColor="@color/color_f" />

        <View
            android:id="@+id/view2"
            android:layout_width="1px"
            android:layout_height="@dimen/space_c_2"
            android:layout_marginBottom="@dimen/space_b_2"
            android:layout_marginEnd="@dimen/space_b_1"
            android:layout_marginStart="@dimen/space_b_1"
            android:layout_marginTop="@dimen/space_b_2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/pop_chat_bg_selector"
            android:gravity="center"
            android:paddingEnd="@dimen/space_b_4"
            android:paddingStart="@dimen/space_b_4"
            android:text="@string/chat_delete"
            android:textColor="@color/color_f" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_b_1"
        android:contentDescription="@null"
        android:src="@drawable/ic_popup_pointer" />

</LinearLayout>