<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_voice_layout"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/chat_voice_round_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:src="@drawable/chat_icon_voice0"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tickTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_w"
        android:textSize="54sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_record_button_slideUpToCancel"
        android:textColor="#fff"
        android:textSize="14sp"
        android:visibility="visible" />

</LinearLayout>