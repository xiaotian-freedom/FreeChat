<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.common.widget.BounceScrollView
        android:id="@+id/settingScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/mChangeBgView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_12"
                android:layout_marginStart="@dimen/space_12"
                android:layout_marginTop="@dimen/space_20"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_w"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginEnd="@dimen/space_20"
                    android:layout_marginStart="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_20"
                    android:text="@string/setting_change_chat_bg"
                    android:textColor="@color/color_b_11"
                    android:textSize="@dimen/text_size_15" />

            </android.support.v7.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/setting_change_chat_background_layout" />

                <FrameLayout
                    android:id="@+id/chatBgTopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_w"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/mChangePwdView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_12"
                            android:layout_marginStart="@dimen/space_12"
                            android:layout_marginTop="@dimen/space_12"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/color_w"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/space_20"
                                android:layout_marginEnd="@dimen/space_20"
                                android:layout_marginStart="@dimen/space_20"
                                android:layout_marginTop="@dimen/space_20"
                                android:text="@string/setting_change_pwd"
                                android:textColor="@color/color_b_11"
                                android:textSize="@dimen/text_size_15" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/mClearCacheView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_12"
                            android:layout_marginStart="@dimen/space_12"
                            android:layout_marginTop="@dimen/space_12"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/color_w"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/space_20"
                                android:layout_marginEnd="@dimen/space_20"
                                android:layout_marginStart="@dimen/space_20"
                                android:layout_marginTop="@dimen/space_20"
                                android:text="@string/setting_clear_cache"
                                android:textColor="@color/color_b_11"
                                android:textSize="@dimen/text_size_15" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/mLoginOutView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_12"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/color_w"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/space_20"
                                android:layout_marginEnd="@dimen/space_20"
                                android:layout_marginStart="@dimen/space_20"
                                android:layout_marginTop="@dimen/space_20"
                                android:text="@string/setting_login_out"
                                android:textColor="@color/color_b_11"
                                android:textSize="@dimen/text_size_15" />

                        </android.support.v7.widget.CardView>

                        <View
                            android:id="@+id/emptyView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_w" />

                    </LinearLayout>

                    <!-- 添加半透明遮罩 -->
                    <View
                        android:id="@+id/alphaView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="@color/color_w"
                        android:visibility="gone" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

    </com.common.widget.BounceScrollView>

</LinearLayout>